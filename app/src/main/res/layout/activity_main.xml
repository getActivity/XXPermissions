<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_main_request_single"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="@string/demo_request_single_dangerous_permission" />

            <Button
                android:id="@+id/btn_main_request_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/demo_request_multiple_dangerous_permission" />

            <Button
                android:id="@+id/btn_main_request_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/demo_request_location_permission" />

            <Button
                android:id="@+id/btn_main_request_sensors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/demo_request_sensors_permission" />

            <Button
                android:id="@+id/btn_main_request_activity_recognition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/demo_request_activity_recognition_permission" />

            <Button
                android:id="@+id/btn_main_request_bluetooth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/demo_request_bluetooth_permission" />

            <Button
                android:id="@+id/btn_main_request_wifi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/demo_request_wifi_permission" />

            <Button
                android:id="@+id/btn_main_request_read_media_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/demo_request_media_location_permission" />

            <Button
                android:id="@+id/btn_main_request_media_read"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/demo_request_media_read_permission" />

            <Button
                android:id="@+id/btn_main_request_manage_storage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/demo_request_all_file_access_permission" />

            <Button
                android:id="@+id/btn_main_request_install"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/demo_request_install_unknown_apps_permission" />

            <Button
                android:id="@+id/btn_main_request_window"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/demo_request_display_over_other_apps_permission" />

            <Button
                android:id="@+id/btn_main_request_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/demo_request_modify_system_settings_permission" />

            <Button
                android:id="@+id/btn_main_request_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/demo_request_allow_notifications_permission" />

            <Button
                android:id="@+id/btn_main_request_post_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/demo_request_send_notifications_permission_api33" />

            <Button
                android:id="@+id/btn_main_request_notification_listener"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/demo_request_allow_notifications_access_permission" />

            <Button
                android:id="@+id/btn_main_request_package"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/demo_request_apps_with_usage_access_permission" />

            <Button
                android:id="@+id/btn_main_request_alarm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/demo_request_alarms_reminders_permission" />

            <Button
                android:id="@+id/btn_main_request_not_disturb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/demo_request_do_not_disturb_access_permission" />

            <Button
                android:id="@+id/btn_main_request_ignore_battery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/demo_request_ignore_battery_optimize_permission" />

            <Button
                android:id="@+id/btn_main_request_picture_in_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/demo_request_picture_in_picture_permission" />

            <Button
                android:id="@+id/btn_main_request_open_vpn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/demo_request_vpn_permission" />

            <Button
                android:id="@+id/btn_main_request_get_installed_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/demo_request_get_installed_apps_permission" />

            <Button
                android:id="@+id/btn_main_app_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:text="@string/demo_start_app_details_activity" />

        </LinearLayout>

    </FrameLayout>

</android.support.v4.widget.NestedScrollView>